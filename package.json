{
  "name": "@diplodoc/yfmlint",
  "version": "1.3.5",
  "description": "YFM (Yandex Flavored Markdown) syntax linter with custom rules for Diplodoc platform",
  "keywords": [
    "docs",
    "yfm",
    "yfmlint",
    "markdownlint",
    "documentation"
  ],
  "engines": {
    "npm": ">=11.5.1"
  },
  "homepage": "https://github.com/diplodoc-platform/yfmlint#readme",
  "bugs": {
    "url": "https://github.com/diplodoc-platform/yfmlint/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:diplodoc-platform/yfmlint.git"
  },
  "license": "MIT",
  "author": "YFM Team <yfm-team@yandex.ru>",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "default": "./build/index.js"
    }
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rm -rf build; npm run build:lib",
    "build:lib": "esbuild/build.mjs && tsc -p tsconfig.transform.json --emitDeclarationOnly",
    "dev:lib": "tsc -w -p tsconfig.transform.json",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "lint update && lint",
    "lint:fix": "lint update && lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky"
  },
  "devDependencies": {
    "@diplodoc/lint": "^1.13.2",
    "@diplodoc/transform": "^4.48.4",
    "@diplodoc/tsconfig": "^1.0.2",
    "@types/lodash": "^4.17.15",
    "@types/markdown-it": "^13.0.9",
    "@types/markdown-it-attrs": "^4.1.3",
    "@vitest/coverage-v8": "^3.0.8",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.2",
    "markdown-it-attrs": "^4.3.1",
    "markdownlint": "github:diplodoc-platform/markdownlint#no-parse-micromark",
    "ts-dedent": "^2.2.0",
    "typescript": "5.9.3",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
  }
}
