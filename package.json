{
  "name": "@diplodoc/mdlint",
  "version": "1.1.3",
  "description": "A simple transformer of text in YFM (Yandex Flavored Markdown) to HTML",
  "keywords": [
    "docs",
    "yfm",
    "liquid",
    "documentation",
    "tool",
    "tools",
    "generator"
  ],
  "homepage": "https://github.com/diplodoc-platform/mdlint#readme",
  "bugs": {
    "url": "https://github.com/diplodoc-platform/mdlint/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:diplodoc-platform/mdlint.git"
  },
  "license": "MIT",
  "author": "YFM Team <yfm-team@yandex.ru>",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run build:lib",
    "build:lib": "tsc -p tsconfig.transform.json",
    "dev:lib": "tsc -w -p tsconfig.transform.json",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "jest --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "lint update && lint",
    "lint:fix": "lint update && lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "chalk": "4",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@diplodoc/lint": "^1.2.1",
    "@diplodoc/tsconfig": "^1.0.2",
    "@types/jest": "^28.1.7",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.15",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-dedent": "^2.2.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.2.2"
  }
}
